<!-- app/views/quizzes/_form.html.erb -->
<%= form_with(model: quiz) do |form| %>
  <% if quiz.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(quiz.errors.count, "error") %> prohibited this quiz from being saved:</h2>
      <ul>
        <% quiz.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :public %>
    <%= form.check_box :public %>
  </div>

  <!-- QUESTIONS nested-form controller -->
  <div
    data-controller="nested-form"
    data-nested-form-wrapper-selector-value=".nested-question-wrapper"
  >
    <!-- Template for a NEW question -->
    <template data-nested-form-target="template">
      <%= form.fields_for :questions, Question.new, child_index: 'NEW_RECORD' do |qf| %>
        <%= render "quizzes/quiz_question_form", f: qf %>
      <% end %>
    </template>

    <!-- Existing questions -->
    <div data-nested-form-target="target">
      <%= form.fields_for :questions do |qf| %>
        <%= render "quizzes/quiz_question_form", f: qf %>
      <% end %>
    </div>

    <button type="button" data-action="nested-form#add">Add Question</button>
  </div>

  <div style="margin-top: 12px;">
    <%= form.submit %>
  </div>
<% end %>

