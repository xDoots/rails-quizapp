<style>
  #quizzes {
    border-collapse: collapse;
    width: 100%;
  }

  #quizzes th, #quizzes td {
    border: 1px solid #ccc;
    padding: 8px 12px;
    vertical-align: middle; text-align: left;
  }

  #quizzes th {
    background-color: #f8f8f8;
  }

  #quizzes td a.title-link {
    color: black;
    text-decoration: none;
  }

  #quizzes td a.title-link:hover {
    text-decoration: underline;
  }

  #quizzes td a.button {
    background-color: white;
    color: black;
    border: 1px solid #ccc;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    padding: 6px 12px;
    transition: all 0.2s;
  }

  #quizzes td a.button:hover {
    background-color: #f0f0f0;
    box-shadow: 0 2px 6px rgba(0,0,0,0.15);
  }
</style>

<table id="quizzes">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.user.username if quiz.respond_to?(:user) && quiz.user %></td>
        <td>
          <%= link_to quiz.title, quiz_path(quiz), class: "title-link", data: { turbo: false } %>
        </td>
        <td>
          <%= link_to 'View', quiz_path(quiz), class: 'button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>