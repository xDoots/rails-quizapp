<% content_for :title, @quiz.title %>

<h1><%= @quiz.title %></h1>

<%= render @quiz %>

<div class="quiz-actions">
  <%= link_to "View results", quiz_results_path(@quiz), class: "header-btn" %>
  <%= link_to "Take this quiz", take_quiz_path(@quiz), class: "header-btn" %>
  <%= link_to "Edit this quiz", edit_quiz_path(@quiz), class: "header-btn" %>
  <%= link_to "Back to quizzes", quizzes_path, class: "header-btn" %>

  <p>
    <%= button_to "Delete this quiz!", @quiz, method: :delete, class: "delete-btn" %>
  </p>
</div>
